<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="true"
                   DisableBackdropClick="true"
                   NoHeader="true"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />
<OSMDialogRenderer />

<MudLayout>
    <OSMMainTopBar @bind-Open=_drawerOpen />
    <MudDrawer @bind-Open=_drawerOpen ClipMode=DrawerClipMode.Always Elevation="1" Class="mud-NavMenu-z-index">
@*         <MudDrawerHeader>
            <MudText Typo="Typo.h6">Admin</MudText>
        </MudDrawerHeader> *@
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16 mud-body-z-index">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
}